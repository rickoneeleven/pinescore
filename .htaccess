RewriteEngine on

# Hide the application and system directories by redirecting the request to index.php
RewriteBase /
RewriteRule ^(application|system|\.svn|\.git) index.php/$1 [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php/$1 [QSA,L]

RewriteCond %{HTTP_HOST} ^novascore\.io$ [NC]
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://novascore.io/$1 [R,L]

RewriteCond %{HTTP_HOST} ^dev\.novascore\.io$ [NC]
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://dev.novascore.io/$1 [R,L]